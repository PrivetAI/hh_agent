# Simple production Dockerfile for FastAPI
FROM python:3.11-slim

# Отключаем создание .pyc и буферизацию вывода
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

# Устанавливаем системные зависимости
RUN apt-get update && apt-get install -y \
    libpq5 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Добавляем непривилегированного пользователя
RUN useradd -m -r app && mkdir /app && chown app:app /app

WORKDIR /app

# Python‑зависимости
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt gunicorn

# Копируем саму аппу
COPY --chown=app:app ./app ./app

USER app

EXPOSE 8000
HEALTHCHECK --interval=30s --timeout=30s --start-period=40s --retries=3 \
    CMD curl -f http://localhost:8000/health || exit 1

# Запуск Gunicorn+UvicornWorker в shell‑форме (удобнее при длинных опциях)
# Сервер 1CPU 2GB RAM: 2 workers для баланса памяти и производительности
CMD exec gunicorn app.main:app \
     -k uvicorn.workers.UvicornWorker \
     --bind 0.0.0.0:8000 \
     --workers 2 \
     --worker-connections 1000 \
     --timeout 120 \
     --max-requests 1000 \
     --max-requests-jitter 50 \
     --log-level info \
     --access-logfile - \
     --error-logfile -
